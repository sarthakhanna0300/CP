typedef long long ll ; typedef long double ld;
using namespace std;

ll calsum(ll n, ll base) {
    ll ans = 0;
    while (n > 0) {
        ans += n % base;
        n /= base;
    }
    return ans;
}

int main() {
    NeedForSpeed;
//    T_ {
    ll n;
    cin >> n;
    ll sum = 0;
    for (ll i = 2; i < n; i++) {
        sum += calsum(n, i);
    }
    ll gcd = __gcd(sum, n - 2);
    cout << sum / gcd << "/" << (n - 2) / gcd;
//    };
    return 0;
}


